<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3D3D3"
    android:padding="20dp">

    <!-- Back Arrow -->
    <ImageView
        android:id="@+id/backArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_arrow_back"
        android:layout_alignParentStart="true"
        android:padding="10dp"
        />

    <!-- Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result_BBA"
        android:textSize="20sp"
        android:textColor="#3388FF"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />

    <!-- Scrollable Cards -->
    <ScrollView
        android:id="@+id/resultsScroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/titleText"
        android:layout_above="@id/bottomTotalBar"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Card 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/round_back_white_15"
                android:padding="15dp"
                android:layout_marginBottom="15dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/result"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="15dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:text="SISC Party"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:text="Votes: 240"
                        android:textColor="#3388FF"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- Card 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/round_back_white_15"
                android:padding="15dp"
                android:layout_marginBottom="15dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/result"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="15dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:text="Unity Group"
                        android:textSize="16sp"
                        android:textStyle="bold"

                        android:textColor="#000000"
                        android:layout_height="50dp"
                        android:layout_width="50dp"/>

                    <TextView
                        android:text="Votes: 180"
                        android:textColor="#3388FF"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_height="50dp"
                        android:layout_width="50dp"
                        />
                </LinearLayout>
            </LinearLayout>

            <!-- Card 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/round_back_white_15"
                android:padding="15dp"
                android:layout_marginBottom="15dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/result"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="15dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:text="Independent"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_height="50dp"
                        android:layout_width="50dp"
                        />

                    <TextView
                        android:text="Votes: 130"
                        android:textColor="#3388FF"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_height="50dp"
                        android:layout_width="50dp"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Vote Bar -->
    <TextView
        android:id="@+id/bottomTotalBar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/round_back_primary15"
        android:text="BBA total votes 550"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="10dp" />
</RelativeLayout>
