<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#D3D3D3">

    <!-- Back Button and Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#3388FF"
        android:gravity="center_vertical">


        <ImageView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back"
            android:padding="10dp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Department"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Search Field -->
    <EditText
        android:id="@+id/searchField"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="Search"
        android:drawableStart="@drawable/ic_search"
        android:background="#FFFFFF"
        android:paddingStart="12dp"
        android:layout_marginTop="12dp" />

    <!-- Sample Selected Department Tag -->
    <Button
        android:id="@+id/selectedTag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BBA"
        android:textAllCaps="false"
        android:backgroundTint="#3388FF"
        android:textColor="#FFFFFF"
        android:layout_marginTop="12dp" />

    <!-- Department List -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <Button
                style="@style/DepartmentButton"
                android:text="Computer Science" />

            <Button
                style="@style/DepartmentButton"
                android:text="Electrical Engineering" />

            <Button
                style="@style/DepartmentButton"
                android:text="Media and Communications" />

            <Button
                style="@style/DepartmentButton"
                android:text="Mathematics" />

            <Button
                style="@style/DepartmentButton"
                android:text="Education" />

            <Button
                style="@style/DepartmentButton"
                android:text="Physical Education" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
